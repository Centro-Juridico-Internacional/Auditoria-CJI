---
import Burger from "@components/Burger.astro";

const HEADER = [
  {
    name: "Familia CJI",
    href: "https://centrojuridicointernacional.co/familia-cji/",
  },
  {
    name: "Sobre Nosotros",
    href: "#",
  },
];
---

<header
  class="relative top-0 z-999 h-fit min-h-16 w-screen bg-green-600 pb-4"
  id="header"
>
  <nav id="navDesktop" class="hidden items-center justify-evenly">
    <a href="/"
      ><img
        src="./logoMain.svg"
        alt="Logo Congreso Imagen"
        class="mt-3 mr-8 h-16"
      /></a
    >

    <ul class="flex gap-x-6">
      {
        HEADER.map((item) => (
          <li>
            <a
              href={item.href}
              class="flex h-10 w-fit items-center justify-center font-bold text-gray-50 transition-all duration-300 ease-out hover:-translate-y-1 hover:scale-110"
            >
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <nav id="navMobile" class="hidden w-full items-center justify-between px-8">
    <a href="/" class="flex justify-center items-center"
      ><img
        src="./logoMainSolo.svg"
        alt="Logo Congreso Imagen"
        class="w-20 mt-2"
      /></a
    >
    <div class="flex items-center justify-center"><Burger /></div>
  </nav>
</header>
<div
  class="hidden h-fit min-h-20 w-screen items-center bg-green-600"
  id="cartHeader"
>
  <ul class="flex flex-wrap items-center justify-center gap-6 p-4">
    {
      HEADER.map((item) => (
        <li class="transition-all duration-500 ease-out hover:-translate-y-1 hover:scale-110">
          <a
            href={item.href}
            class="z-10 my-2 mb-16 h-12 w-48 rounded-full bg-white px-3 py-1.5 text-lg font-semibold text-black drop-shadow-lg transition-all duration-400 ease-out hover:-translate-y-1 hover:scale-110 hover:bg-green-600 hover:text-gray-50 dark:text-gray-700 dark:hover:bg-gray-700"
          >
            {item.name}
          </a>
        </li>
      ))
    }
  </ul>
</div>

<style>
  #headerMobile {
    --tw-shadow: inset 0 2px 4px 0 rgb(0 0 0 / 0.2);
    --tw-shadow-colored: inset 0 2px 4px 0 var(--tw-shadow-color);
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000),
      var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
  }
  @keyframes fade-in {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }
</style>
<script src="@scripts/header.js"></script>
